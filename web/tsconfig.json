{
   "angularCompilerOptions": {
      "genDir": "./dist/aot"
   },
   "buildOnSave": false,
   "compileOnSave": false,
   "compilerOptions": {
      "baseUrl": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [ "es2015", "dom" ],
      "mapRoot": "",
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "dist",
      "paths": {
         "@app/*": [ "app/modules/*" ]
      },
      "rootDir": ".",
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es5",
      "types": [ "jasmine", "node" ]
   },
   "exclude": [ "dist", "node_modules" ]
}
